<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editLogLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#FDFDFD">

    <EditText
        android:id="@+id/editTextLog"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/edittext_background"
        android:hint="Edit your log..."
        android:textSize="16sp"
        android:gravity="top"
        android:padding="12dp"
        android:inputType="textMultiLine"
        />

    <Spinner
        android:id="@+id/emojiSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnUpdateLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Log"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/btnDeleteLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Log"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white" />
</LinearLayout>
